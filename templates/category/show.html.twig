{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Shortname{% endtrans %}</th>
                <td>{{ category.shortname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Longname{% endtrans %}</th>
                <td>{{ category.longname }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_index') }}"><i class="fas fa-arrow-left"></i>{% trans %}Back to list{% endtrans %}</a>

    <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}"><i class="fas fa-edit"></i>{% trans %}Edit{% endtrans %}</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
