<form method="post" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('{'{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <button class="btn btn-secondary"><i class="fas fa-trash-alt"></i> {% trans %}Delete{% endtrans %}</button>
    {% endif %}
</form>
